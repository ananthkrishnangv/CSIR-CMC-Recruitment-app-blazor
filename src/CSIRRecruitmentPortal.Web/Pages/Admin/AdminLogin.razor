@page "/admin/login"
@using CSIRRecruitmentPortal.Shared.DTOs
@using CSIRRecruitmentPortal.Web.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<PageTitle>Official Login - CSIR-SERC Recruitment Portal</PageTitle>

<div class="login-container">
    <!-- Background Image Layer -->
    <div class="login-bg"></div>
    
    <!-- Content Overlay -->
    <div class="login-content">
        
        <!-- Left Side: Stats & Info -->
        <div class="stats-panel">
            <div class="branding">
                 <img src="images/csir_logo.svg" alt="CSIR Logo" class="logo mb-4" />
                 <h1 class="text-4xl font-bold text-white mb-2" style="font-family: 'Inter', sans-serif;">CSIR-SERC</h1>
                 <h2 class="text-xl text-blue-100 font-light mb-8">Administrative Console</h2>
            </div>
            
             <div class="glass-card max-w-md text-left p-6">
                <h3 class="text-xl font-bold text-white mb-2">Restricted Access</h3>
                <p class="text-blue-100 text-sm mb-4">This login is restricted to authorized personnel of CSIR-SERC only (Admin, Administrative Officers, Director). Unauthorized access is prohibited.</p>
                <div class="flex items-center text-white text-xs">
                    <MudIcon Icon="@Icons.Material.Filled.Security" Size="Size.Small" Class="mr-2" />
                    <span>Secured by Corporate Net</span>
                </div>
            </div>
        </div>

        <!-- Right Side: Login Form -->
        <div class="login-form-container">
            <div class="login-card glass-panel border-t-4 border-t-red-500">
                <div class="text-center mb-6">
                    <div class="bg-red-50 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3">
                        <MudIcon Icon="@Icons.Material.Filled.AdminPanelSettings" Class="text-red-500" Size="Size.Medium" />
                    </div>
                    <h2 class="text-2xl font-bold text-slate-800">Official Login</h2>
                    <p class="text-slate-500 text-sm">Sign in with your corporate credentials</p>
                </div>

                <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                    <DataAnnotationsValidator />
                    
                    <div class="mb-4">
                        <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Username / Email</label>
                        <InputText @bind-Value="loginModel.Username" class="fluent-input w-full" placeholder="username" />
                        <ValidationMessage For="@(() => loginModel.Username)" class="text-red-500 text-xs mt-1" />
                    </div>

                    <div class="mb-6">
                        <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Password</label>
                        <InputText @bind-Value="loginModel.Password" type="password" class="fluent-input w-full" placeholder="••••••••" />
                        <ValidationMessage For="@(() => loginModel.Password)" class="text-red-500 text-xs mt-1" />
                    </div>

                    <button type="submit" class="fluent-button-danger w-full py-3 mb-4 flex justify-center items-center" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                            <span class="ms-2">Authenticating...</span>
                        }
                        else
                        {
                            <span>Login to Dashboard</span>
                            <MudIcon Icon="@Icons.Material.Filled.Login" Size="Size.Small" Class="ml-2" />
                        }
                    </button>
                    
                    <div class="mt-6 pt-6 border-t border-slate-200">
                         <a href="/login" class="text-xs text-slate-400 hover:text-slate-600 flex items-center justify-center">
                             <MudIcon Icon="@Icons.Material.Filled.ArrowBack" Size="Size.Small" Class="mr-1" /> Back to Applicant Portal
                         </a>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<style>
    /* Reuse styles from Login.razor where possible, override specific ones */
    .fluent-button-danger {
        background-color: #D13438; /* Fluent Red */
        color: white;
        border: none;
        border-radius: 4px;
        font-weight: 600;
        transition: background-color 0.2s;
    }
    
    .fluent-button-danger:hover {
        background-color: #A4262C;
    }
    
    .fluent-button-danger:disabled {
        background-color: #F4B9BC;
        cursor: not-allowed;
    }
</style>

@code {
    private AdminLoginRequest loginModel = new();
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        isLoading = true;
        try
        {
            var result = await AuthService.LoginAdminAsync(loginModel);
            if (result.Success)
            {
                Navigation.NavigateTo("/admin/dashboard");
            }
            else
            {
                Snackbar.Add(result.Message ?? "Login failed", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add("An unexpected error occurred: " + ex.Message, Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }
}
